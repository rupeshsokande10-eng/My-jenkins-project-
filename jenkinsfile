pipeline {
    agent any

    stages {
        stage('Checkout Code') {
            steps {
                checkout scm
            }
        }

        stage('Install Nginx') {
            steps {
                sh '''
                sudo apt-get update -y
                sudo apt-get install nginx -y
                '''
            }
        }

        stage('Deploy Website') {
            steps {
                sh '''
                sudo cp index.html /var/www/html/
                sudo systemctl restart nginx
                '''
            }
        }
    }
}
